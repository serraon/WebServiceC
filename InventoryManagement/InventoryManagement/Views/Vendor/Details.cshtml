@model InventoryManagement.Models.ViewModel.VendorContactViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Vendor Details</h2>

<div>
    <h4>@Model.Vendor.CompanyName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Company Name:
        </dt>

        <dd>
            @Model.Vendor.CompanyName
        </dd>

        <dt>
            Vendor Type:
        </dt>

        <dd>
            @Model.Vendor.VendorType
        </dd>

    </dl>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Vendor.VendorID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
<hr />

<h4>Contacts</h4>

@if (Model.Contacts.Count == 0)
{
    <p>There are no contacts.</p>
}

else
{
<table class="table products table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model.Contacts)
        {
            <tr>
                <td>
                    @contact.FirstName @contact.LastName
                </td>
                <td>
                    @contact.EmailAddress
                </td>
                <td>
                    @contact.Street @contact.City @contact.Province @contact.Country @contact.ZipCode
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Contact", new { id = contact.ContactID }, null) |
                    @Html.ActionLink("Delete", "Delete", "Contact", new { id = contact.ContactID }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
}

<p>
    @Html.ActionLink("New Contact", "Create", "Contact", new { id = Model.Vendor.VendorID }, null) 
</p>